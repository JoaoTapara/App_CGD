<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fundo_login"
    tools:context=".Tela_Cadastro_login">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cadastre-se"
                android:textAlignment="center"
                android:textColor="#F8F5F5"
                android:textSize="48dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:text="Email"
                android:textColor="#F8F8F8"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/container_cadastro"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="20dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Senha"
                android:textColor="#F8F8F8"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/container_cadastro"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="20dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Confirmar Senha"
                android:textColor="#F8F8F8"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_senha_conf"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/container_cadastro"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="20dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Nome"
                android:textColor="#F8F8F8"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_nome"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/container_cadastro"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="20dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="CPF"
                android:textColor="#F8F8F8"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_cpf"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/container_cadastro"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="20dp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:text="Telefone"
                android:textColor="#F8F8F8"
                android:textSize="25dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/container_cadastro"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cadastrar"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/container_botao_login"
                android:padding="10dp"
                android:text="Cadastrar"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>


</LinerLayout>