<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_login"
    tools:context=".Tela_Cadastro_login">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_dum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="5dp"
        android:text="Data da Ultima Menstruação"
        android:inputType="date"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dpk_dum"
        tools:layout_editor_absoluteX="35dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dpk_dum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_primario"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/tv_id_idade" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_id_idade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="5dp"
        android:text="Idade"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_idade"
        tools:layout_editor_absoluteX="35dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_idade"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edt_primario"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/tv_peso" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="5dp"
        android:text="Peso"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edt_peso" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edt_peso"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/edt_primario"
        android:textColor="@color/black"
        android:padding="10dp"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/btn_cadastrar" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_cadastrar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/btn_primario"
        android:text="Cadastrar"
        android:textColor="@color/white"
        android:fontFamily="@font/lemon"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>